@model Library.Models.Genre
<div class="container">
    <h4 class="col text-center">Genre</h4>
    @using (Html.BeginForm("CreateGenre", "Home"))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col" })
                <div class="col">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col">
                    <input type="submit" value="Create" class="btn btn-outline-secondary" />
                </div>
            </div>
        </div>
    }

</div>